<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle special characters in filenames
    RewriteCond %{REQUEST_URI} ^/img/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^img/(.*)$ public/img/$1 [L,NC]

    # Serve static files directly from public folder
    RewriteCond %{REQUEST_URI} ^/(build|img|js|css|favicon\.ico|robots\.txt)
    RewriteRule ^(.*)$ public/$1 [L]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # Handle Laravel storage access for images
    RewriteCond %{REQUEST_URI} ^/storage/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^storage/(.*)$ public/storage/$1 [L,NC]

    # Handle direct storage access for portfolio images
    RewriteCond %{REQUEST_URI} ^/storage/app/public/portfolios/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^storage/app/public/portfolios/(.*)$ public/storage/portfolios/$1 [L,NC]

    # Handle direct storage access for any public files
    RewriteCond %{REQUEST_URI} ^/storage/app/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^storage/app/public/(.*)$ public/storage/$1 [L,NC]

    # Handle legacy image paths
    RewriteCond %{REQUEST_URI} ^/images/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^images/(.*)$ public/storage/portfolios/$1 [L,NC]

    # Handle portfolio images with different naming patterns
    RewriteCond %{REQUEST_URI} ^/portfolios/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^portfolios/(.*)$ public/storage/portfolios/$1 [L,NC]

    # Handle portfolio images from database
    RewriteCond %{REQUEST_URI} ^/portfolio-images/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^portfolio-images/(.*)$ public/storage/portfolios/$1 [L,NC]
</IfModule>

# Enable mod_headers for better file serving
<IfModule mod_headers.c>
    # Cache static files
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js|svg)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Handle special characters in filenames
    Header always set Access-Control-Allow-Origin "*"
</IfModule>

# PHP Upload Limits
php_value upload_max_filesize 20M
php_value post_max_size 20M
php_value max_execution_time 300
php_value max_input_time 300
php_value memory_limit 256M

# Enable mod_mime for proper file type detection
<IfModule mod_mime.c>
    AddType image/png .png
    AddType image/jpeg .jpg .jpeg
    AddType image/gif .gif
    AddType image/svg+xml .svg
</IfModule>